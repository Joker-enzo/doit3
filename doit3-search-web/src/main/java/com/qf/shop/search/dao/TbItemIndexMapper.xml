<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qf.shop.search.dao.TbItemIndexMapper" >
  <sql id="Base_Column_List" >
    i.id, i.title, i.sell_point as sellPoint, i.price,  i.image, c.name as catName
  </sql>

  <select id="listItemById"   parameterType="java.lang.Long" resultType="com.qf.shop.search.pojo.vo.TbItemIndex">
    select
    <include refid="Base_Column_List"></include>
    from tb_item i
    left join tb_item_cat c
    on i.cid=c.id
    where i.id=#{itemId}

  </select>
</mapper>